<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.knightua.notepadapp.ui.fragments.main.MainFragment"
        android:label="MainFragment">
        <action
            android:id="@+id/action_open_detail_note"
            app:destination="@id/noteFragment" />
    </fragment>
    <fragment
        android:id="@+id/noteFragment"
        android:name="com.knightua.notepadapp.ui.fragments.note.NoteFragment"
        android:label="NoteFragment">
        <argument
            android:name="argNote"
            app:argType="com.knightua.notepadapp.room.entity.Note" />
    </fragment>
</navigation>