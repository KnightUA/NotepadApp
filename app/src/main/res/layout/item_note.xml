<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_dp_8"
        app:cardCornerRadius="@dimen/radius_dp_6">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_view_title"
                android:layout_width="@dimen/width_dp_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_dp_16"
                android:layout_marginEnd="@dimen/margin_dp_16"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/text_view_datetime"
                app:layout_constraintTop_toTopOf="@id/text_view_datetime"
                tools:text="Today" />

            <TextView
                android:id="@+id/text_view_description"
                android:layout_width="@dimen/width_dp_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_dp_16"
                android:layout_marginBottom="@dimen/margin_dp_16"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/text_view_title"
                app:layout_constraintRight_toRightOf="@+id/text_view_title"
                app:layout_constraintTop_toBottomOf="@+id/text_view_title"
                tools:text="Today was the best day of my life or could be" />

            <TextView
                android:id="@+id/text_view_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_dp_16"
                android:layout_marginEnd="@dimen/margin_dp_16"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="11.10.2018" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>